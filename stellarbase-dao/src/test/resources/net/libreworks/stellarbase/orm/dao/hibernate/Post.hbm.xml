<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="net.libreworks.stellarbase.orm.dao.Post" table="post">
        <id name="id" type="long" column="post_id">
            <generator class="native" />
        </id>
        <version name="version" type="integer"/>
        <many-to-one name="thread" class="net.libreworks.stellarbase.orm.dao.Thread" fetch="join" column="thread_id" not-null="true"/>
        <many-to-one name="author" class="net.libreworks.stellarbase.orm.dao.Person" fetch="join" column="person_id" not-null="true"/>
        <property name="title" type="string" length="255"/>
        <property name="body" type="text"/>
        <property name="createdOn" column="created_on" type="timestamp" not-null="true"/>
        <property name="createdBy" column="created_by" type="string" length="50" not-null="true"/>
        <property name="modifiedOn" column="modified_on" type="timestamp" not-null="true"/>
        <property name="modifiedBy" column="modified_by" type="string" length="50" not-null="true"/>
    </class>
</hibernate-mapping>
